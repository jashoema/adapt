# Network device inventory for ADAPT
---
# Device inventory with parameters required for NAPALM drivers
devices:
  router1:
    hostname: "192.168.1.1"
    device_type: "ios"  # NAPALM driver type
    username: ""  # Default from .env if not specified
    password: ""  # Default from .env if not specified
    optional_args:
      port: 22
      secret: ""  # Enable password, from .env if not specified
      transport: "ssh"
      timeout: 60

  router2:
    hostname: "192.168.1.2"
    device_type: "nxos"
    username: "admin"  # Override .env settings
    password: ""       # From .env
    optional_args:
      port: 22
      transport: "ssh"
      timeout: 60

  switch1:
    hostname: "192.168.1.3"
    device_type: "iosxr"
    username: ""  # From .env
    password: ""  # From .env
    optional_args:
      port: 22
      transport: "ssh"
      timeout: 30
